<UserControl x:Class="TiendaP.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiendaP.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI" 
             xmlns:viewmodels="clr-namespace:TiendaP.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">

    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
                <TextBlock Text="Product Filter" Margin="0,0,20,0"/>
                <CheckBox IsChecked="False" Content="T-Shirts"/>
                <CheckBox IsChecked="False" Content="Shoes"/>
                <CheckBox IsChecked="False" Content="Shovels"/>
            </StackPanel>

            <!-- Mostrar los productos -->
            <ItemsControl Grid.Row="1" Loaded="ItemsControl_Loaded">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Image Name="imagenValue" Width="50" Height="50" Margin="0,0,10,0"/>
                            <TextBlock x:Name="NombreValue" Text="{Binding Nombre}" Margin="0,0,10,0"/>
                            <TextBlock x:Name="TallaValue" Margin="0,0,10,0"/>
                            <TextBlock x:Name="PrecioValue" Margin="0,0,10,0"/>
                            <Button Content="Add to Cart"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>

</UserControl>
